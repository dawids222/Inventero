<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:LibLite.Inventero.Presentation.Desktop.ViewModel"
                    xmlns:view="clr-namespace:LibLite.Inventero.Presentation.Desktop.View">
    <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
        <view:MainMenuView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PurchasesViewModel}">
        <view:ItemsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
        <view:ItemsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:GroupsViewModel}">
        <view:ItemsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:Item.PurchaseViewModel}">
        <view:ItemView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:Item.ProductViewModel}">
        <view:ItemView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:Item.GroupViewModel}">
        <view:ItemView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>