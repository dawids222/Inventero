<mah:MetroWindow 
    x:Class="LibLite.Inventero.Presentation.Desktop.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:LibLite.Inventero.Presentation.Desktop.View"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    mc:Ignorable="d"
    Title="Inventero" 
    MinHeight="400"
    MinWidth="600"
    Height="720" 
    Width="1080"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl 
            Grid.Row="0"
            Grid.Column="0"             
            Content="{Binding MenuViewModel}"/>
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{StaticResource MahApps.Brushes.WindowTitle}">
            <Border CornerRadius="25,0,0,0"
                    Padding="25 25 25 25 "
                    Background="{StaticResource MahApps.Brushes.ThemeBackground}">
                <ContentControl Content="{Binding MainViewModel}"/>
            </Border>
        </Border>
    </Grid>
</mah:MetroWindow>
